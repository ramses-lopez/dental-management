<%= form_for(@provider) do |f| %>
	<%= render 'shared/error_messages', object: @provider %>
	<div class="row">
		<div class='span5'>
			<%= f.label :label %>
			<%= f.text_field :label %>
		</div>
		<div class='span5'>
			<%= f.label :phone %>
			<%= f.text_field :phone %>
		</div>
		<div class='span5'>
			<%= f.label :email %>
			<%= f.text_field :email %>
		</div>
		<div class='span5'>
			<%= f.label :website %>
			<%= f.text_field :website %>
		</div>
	</div>
	<div class="row text-center">
		<%= f.submit t('text.save') + ' ' + Provider.model_name.human, class: 'btn btn-large' %>
	</div>
<% end %>
