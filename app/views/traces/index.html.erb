<h3>Registro de Movimientos</h3>

<%= render 'filter' %>

<% if @traces.size > 0 %>
	<table class='table table-condensed table-hover table-bordered'>
		<thead>
			<tr>
				<th>Material</th>
				<th>Cant.</th>
				<th>Usuario</th>
				<th>Descripci√≥n</th>
				<th>Fecha</th>
			</tr>
		</thead>
		<tbody>
			<% @traces.each do |trace| %>
			<tr class="<%= trace.type == '+' ? 'success' : 'error' %>">
				<td><%= trace.batch.item.label %> (Lote: <%= trace.batch.batch_number %>)</td>
				<td><%= trace.value %></td>
				<td><%= trace.user.nil? ? '' : trace.user.name %></td>
				<td><%= trace.comment %></td>
				<td><%= trace.created_at.to_formatted_s(:short) %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<div class="text-center">
		<%= will_paginate %>
	</div>
<% else %>
	<%= render 'shared/no_records_found', object_class: Trace %>
<% end %>
