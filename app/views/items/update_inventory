<h3>Actualización de Inventario</h3>
<%= form_for :item, url: {action: 'update_stock'} do %>
<div style='height: 400px; overflow: scroll; '>
	<table class='table table-hover table-bordered table-condensed'>
		<thead>
			<tr>
				<th>Material</th>
				<th>En existencia</th>
				<th>A entregar</th>
			</tr>
		</thead>
		<tbody>
			<% @items.each do |item| %>
				<%= fields_for "item_ids[]", item do |item_fields| %>
					<tr>
						<%= item_fields.hidden_field :type, value: '-' %>
						<%= item_fields.hidden_field :comment, value: 'Actualización de Inventario' %>
						<td><%= item.label %></td>
						<td><%= item.stock %></td>
						<td><%= item_fields.number_field :delta, in: 0..item.stock, value: 0, class: 'span1' %></td>
					</tr>
				<% end %>
			<% end %>
		</tbody>
	</table>
</div>
	<%= submit_tag 'Registrar Entrega' %>
<% end %>
