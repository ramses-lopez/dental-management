<%= form_for(@item) do |f| %>
	<%= render 'shared/error_messages', object: @item %>
	<div class='row'>
		<div class="span5">
			<%= f.label :label %>
			<%= f.text_field :label %>
		</div>
		<div class="span5">
			<%= f.label :minimum_stock %>
			<%= f.number_field :minimum_stock %>
		</div>
	</div>

	<div class="actions">
		<%= f.submit %>
	</div>

<% end %>
