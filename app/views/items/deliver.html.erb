<%= render 'shared/infobox', message: "Ingrese el nÃºmero de unidades del #{Item.model_name.human} que desea entregar, y haga click en 'Registrar Entrega'"%>

<% if @items.size > 0 %>
	<%= form_for :item, url: {action: 'deliver_stock'} do %>
		<table class='table table-hover table-bordered table-condensed'>
			<thead>
				<tr>
					<th>Material</th>
					<th>En existencia</th>
					<th>A entregar</th>
				</tr>
			</thead>
			<tbody>
				<% @items.each do |item| %>
					<%= fields_for "item_ids[]", item do |item_fields| %>
						<tr>
							<%= item_fields.hidden_field :type, value: '-' %>
							<%= item_fields.hidden_field :comment, value: 'Entrega de material' %>
							<td><%= item.label %></td>
							<td><%= item.stock %></td>
							<td><%= item_fields.number_field :delta, in: 0..item.stock, value: 0, class: 'span1' %></td>
						</tr>
					<% end %>
				<% end %>
			</tbody>
		</table>
		<%= render 'shared/paginate', object: @items %>
		<%= submit_tag 'Registrar Entrega' %>
	<% end %>
<% else %>
	<%= render 'shared/no_records_found', object_class: Item %>
<% end %>
