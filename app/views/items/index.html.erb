<h3>Listado de <%= Item.model_name.human.pluralize(:es) %></h3>
<% if @items.size > 0 %>
	<table class='table table-condensed table-hover table-bordered'>
		<thead>
			<tr>
				<th>Descripción</th>
				<th>Existencia mínima</th>
				<th>Existencia</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @items.each do |item| %>

				<%
					row_class = case
						when item.stock == 0
							'error'
						when item.stock < item.minimum_stock
							'warning'
						else
							''
						end
				%>

				<tr class='<%= row_class %>'>
					<td><%= item.label %></td>
					<td><%= item.minimum_stock %></td>
					<td><%= item.stock %></td>
					<td><%= render 'shared/btn_group_action', object: item %> </td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<div class='text-center'>
		<%= will_paginate %>
	</div>
<% else %>
	<%= render 'shared/no_records_found', object_class: Item %>
<% end %>
<br>
<%= render 'shared/form_new', object: Item %>
<%= render 'legend' %>