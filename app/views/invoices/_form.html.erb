<%= form_for(@invoice) do |f| %>

	<%= render 'shared/error_messages', object: @invoice %>

	<div class='row'>
		<div class='span3'>
			<%= f.label :provider_id %>
			<%= f.select :provider_id, options_for_select(Provider.all.map {|p| [p.label, p.id]}), class: 'span3' %>
		</div>
		<div class='span3'>
			<%= f.label :number %>
			<%= f.text_field :number, class: 'datepicker span3'%>
		</div>
		<div class='span3'>
			<%= f.label :date %>
			<%= f.text_field :date, class: 'datepicker span3'%>
		</div>
	</div>
	<fieldset>
		<legend>Detalle</legend>
		<% f.fields_for :invoice_items do |builder| %>
			<%= builder.text_field :invoice_id %>
			<%= builder.text_field :item_id %>
			<%= builder.text_field :quantity %>
			<%= builder.text_field :item_price %>
			<%= builder.text_field :batch_number %>
			<%= builder.text_field :expiration_date %>
		<% end %>
	</fieldset>

	<div class='row'>
		<div class='span4'>
			<%= f.label :tax %>
			<%= f.text_field :tax, class: 'span4' %>
		</div>
		<div class='span4'>
			<%= f.label :total %>
			<%= f.text_field :total, class: 'span4' %>
		</div>
	</div>


	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
