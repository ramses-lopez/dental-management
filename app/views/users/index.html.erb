<h3>Listado de <%= User.model_name.human.pluralize(:es) %></h3>

<table class='table table-hover table-condensed table-bordered'>
	<thead>
		<tr>
			<th><%= User.human_attribute_name(:name) %></th>
			<th><%= User.human_attribute_name(:role) %></th>
			<th><%= User.human_attribute_name(:username) %></th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%= user.name %></td>
				<td><%= user.role.name %></td>
				<td><%= user.username %></td>
				<td><%= render 'shared/btn_group_action', object: user %> </td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

<%= render 'shared/form_new', object: User %>
