<%= render 'shared/error_messages', object: @user %>

<%= form_for @user do |f| %>
	<div class='span4'>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<div class='span4'>
		<%= f.label :username %>
		<%= f.text_field :username %>
	</div>
	<div class='span4'>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div>
	<div class='span4'>
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
	</div>
	<p class="button"><%= f.submit %></p>
<% end %>